<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Essential system permissions for window management -->
    <uses-permission android:name="android.permission.WRITE_SECURE_SETTINGS" />
    <uses-permission android:name="android.permission.CHANGE_CONFIGURATION" />

    <!-- Additional system permissions -->
    <uses-permission android:name="android.permission.MANAGE_ACTIVITY_STACKS"
        tools:ignore="ProtectedPermissions" />
    <uses-permission android:name="android.permission.INTERNAL_SYSTEM_WINDOW"
        tools:ignore="ProtectedPermissions" />
    <uses-permission android:name="android.permission.STATUS_BAR_SERVICE"
        tools:ignore="ProtectedPermissions" />

    <!-- Alternative permissions for system settings -->
    <uses-permission android:name="android.permission.WRITE_SETTINGS"
        tools:ignore="ProtectedPermissions" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />

    <!-- Root alternative permission -->
    <uses-permission android:name="android.permission.ACCESS_SUPERUSER"
        tools:ignore="ProtectedPermissions" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ResolutionChanger"
        android:sharedUserId="android.uid.system"
        tools:ignore="SharedUserIdMigration">

        <!-- Static app shortcuts -->
        <meta-data
            android:name="android.app.shortcuts"
            android:resource="@xml/shortcuts" />

        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.ResolutionChanger">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Activity for the Toggle Resolution shortcut -->
        <activity
            android:name=".ToggleShortcutActivity"
            android:exported="true"
            android:label="@string/shortcut_toggle_resolution"
            android:theme="@style/Theme.ResolutionChanger">
            <!-- Supports explicit/implicit VIEW and data URIs -->
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:scheme="app" android:host="resolutionchanger" android:pathPrefix="/preset" />
            </intent-filter>
            <!-- Custom explicit/implicit actions for automation -->
            <intent-filter>
                <action android:name="com.duc1607.resolutionchanger.action.SET_RESOLUTION" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
            <intent-filter>
                <action android:name="com.duc1607.resolutionchanger.action.SET_PRESET_INDEX" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <service
            android:name=".ResolutionTileService"
            android:label="@string/app_name"
            android:icon="@android:drawable/ic_menu_zoom"
            android:permission="android.permission.BIND_QUICK_SETTINGS_TILE"
            android:exported="true">
            <intent-filter>
                <action android:name="android.service.quicksettings.action.QS_TILE" />
            </intent-filter>
        </service>
    </application>

</manifest>